        <source-file src="ARKController/Metal/ARKMetalController.swift" target-dir="ARKController/Metal" />
        <!-- <source-file src="ARKController/Metal/Render/Renderer.swift" target-dir="ARKController/Metal/Render" /> -->
        <!-- <source-file src="ARKController/Metal/Render/ShaderTypes.swift" target-dir="ARKController/Metal/Render" /> -->
        <!-- <resource-file src="ARKController/Metal/Render/Shaders.metal" target-dir="ARKController/Metal/Render" /> -->

        <source-file src="ARKController/SceneKit/ARKSceneKitController.swift" target-dir="ARKController/SceneKit" />

        <source-file src="Utilities/Utils.swift" target-dir="Utilities" />

        <source-file src="webxrPlugin.swift" />

        <!-- <framework src="Accelerate.framework" /> -->
        <dependency id="cordova-plugin-add-swift-support" version="2.0.2"/>

        <info>
            This plugin requires an iOS Deployment Target of 12.0 or higher. 
            Make sure to adjust config.xml accordingly, e.g:

            &lt;platform name="ios"&gt;
                &lt;preference name="deployment-target" value="12.0.0" /&gt;
            &lt;/platform&gt;
        </info>
    </platform>
    <js-module src="webxr-polyfill.js" name="webxr">
        <clobbers target="navigator.XR" />
    </js-module>
</plugin>